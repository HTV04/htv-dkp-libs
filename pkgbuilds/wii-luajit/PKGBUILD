# Maintainer: HTV04

_gitname=LuaJIT

pkgname=wii-luajit
pkgver=2.1.0.beta3.r445.g09c8767e
pkgrel=1
pkgdesc="Nintendo Gamecube and Wii library."
arch=('any')
url="http://github.com/HTV04/${_gitname}"
license=('custom')
groups=('wii-portlibs')
makedepends=('devkitPPC' 'dkp-toolchain-vars')
options=(!strip libtool staticlibs)
source=(git+${url}.git)
sha256sums=('SKIP')

pkgver() {
  cd "${_gitname}"

  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd "${_gitname}"

  ./build.sh wii
}

package() {
  cd "${_gitname}"

  ./install.sh wii "${pkgdir}"
}
